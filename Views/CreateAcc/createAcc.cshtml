@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Join MOM System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #2563eb 0%, #60a5fa 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: "Segoe UI", sans-serif;
        }

        .register-card {
            max-width: 850px;
            width: 100%;
            border-radius: 18px;
            padding: 40px;
            background: #ffffff;
            box-shadow: 0 25px 60px rgba(0,0,0,0.15);
        }

        .icon-circle {
            width: 55px;
            height: 55px;
            background: #eef2ff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            color: #2563eb;
            font-size: 26px;
        }

        .text-primary {
            color: #2563eb !important;
        }

        .form-control, .form-select {
            height: 48px;
            border-radius: 10px;
            padding-left: 42px;
        }

        .input-icon {
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            color: #2563eb;
        }

        .input-group-custom {
            position: relative;
        }

        .hint {
            font-size: 13px;
            color: #6b7280;
        }

        .btn-create {
            height: 50px;
            border-radius: 12px;
            background: linear-gradient(135deg, #2563eb, #60a5fa);
            border: none;
            font-weight: 600;
            color: white;
        }

            .btn-create:hover {
                opacity: 0.95;
                color: white;
            }

        .signin-link a {
            color: #2563eb;
            text-decoration: none;
            font-weight: 600;
        }

            .signin-link a:hover {
                text-decoration: underline;
                color: #60a5fa;
            }
    </style>
</head>
<body>

    <div class="register-card">
        <div class="text-center">
            <div class="icon-circle">
                <i class="bi bi-person-plus"></i>
            </div>
            <h4 class="fw-bold text-primary">Join MOM System</h4>
            <h2 class="fw-bold mt-2">Create Account</h2>
            <p class="text-muted">
                Join the meeting management system to organize and track meetings efficiently
            </p>
        </div>

        <form class="mt-4 needs-validation" novalidate>
            <div class="row g-3">

                <!-- Username -->
                <div class="col-md-6">
                    <div class="input-group-custom">
                        <i class="bi bi-person input-icon"></i>
                        <input type="text" class="form-control" id="username" required minlength="3" maxlength="50"
                               placeholder="Username">
                        <div class="invalid-feedback">
                            Username must be 3–50 characters long.
                        </div>
                    </div>
                </div>

                <!-- Role -->
                <div class="col-md-6">
                    <div class="input-group-custom">
                        <i class="bi bi-shield-check input-icon"></i>
                        <select class="form-select" id="role" required>
                            <option value="" disabled selected>Select Role</option>
                            <option>Admin</option>
                            <option>Manager</option>
                            <option>User</option>
                        </select>
                        <div class="invalid-feedback">
                            Please select a role.
                        </div>
                    </div>
                </div>

                <!-- Password -->
                <div class="col-md-6">
                    <div class="input-group-custom">
                        <i class="bi bi-key input-icon"></i>
                        <input type="password" class="form-control" id="password" required minlength="6"
                               placeholder="Password">
                        <div class="invalid-feedback">
                            Password must be at least 6 characters.
                        </div>
                    </div>
                </div>

                <!-- Confirm Password -->
                <div class="col-md-6">
                    <div class="input-group-custom">
                        <i class="bi bi-key-fill input-icon"></i>
                        <input type="password" class="form-control" id="confirmPassword" required
                               placeholder="Confirm Password">
                        <div class="invalid-feedback">
                            Passwords do not match.
                        </div>
                    </div>
                </div>

                <!-- Staff Member -->
                <div class="col-12">
                    <div class="input-group-custom">
                        <i class="bi bi-person-badge input-icon"></i>
                        <select class="form-select">
                            <option selected>Staff Member (Optional)</option>
                            <option>Staff 1</option>
                            <option>Staff 2</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="d-grid mt-4">
                <a type="submit" class="btn btn-primary btn-create" asp-action="dashboard" asp-controller="Home">
                    <i class="bi bi-person-plus me-2"></i> Create Account
                </a>
            </div>
            <hr class="my-4">
            <div class="text-center signin-link">
                Already have an account? <a asp-action="login" asp-controller="login">Sign in here</a>
            </div>
        </form>

    </div>

</body>
</html>